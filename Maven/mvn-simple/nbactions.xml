<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath ru.waytosky.mvn.simple.MvnSimpleLauncher</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-exec-exec</actionName>
            <displayName>exec-exec</displayName>
            <goals>
                <goal>exec:exec</goal>
            </goals>
            <properties>
                <exec.mainClass>ru.waytosky.mvn.simple.MvnSimpleLauncher</exec.mainClass>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-exec-java</actionName>
            <displayName>exec-java</displayName>
            <goals>
                <goal>exec:java</goal>
            </goals>
            <properties>
                <exec.mainClass>ru.waytosky.mvn.simple.MvnSimpleLauncher</exec.mainClass>
            </properties>
        </action>
    </actions>
